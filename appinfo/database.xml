<?xml version="1.0" encoding="UTF-8" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>

	<table>
		<name>*dbprefix*ocsms_user_datas</name>
		<declaration>
			<field>
				<name>user_id</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>datakey</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>datavalue</name>
				<type>text</type>
				<length>64</length>
				<notnull>true</notnull>
			</field>

			<index>
				<name>oc_ocsms_user_data_user_key_idx</name>
				<unique>true</unique>
				<field>
					<name>user_id</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>datakey</name>
					<sorting>ascending</sorting>
				</field>
			</index>
		</declaration>
	</table>

	<table>
		<name>*dbprefix*ocsms_smsdatas</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>10</length>
				<primary>true</primary>
			</field>
			<field>
				<name>user_id</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>added</name>
				<type>timestamp</type>
				<notnull>true</notnull>
				<default>1970-01-01 00:00:00</default>
			</field>
			<field>
				<name>lastmodified</name>
				<type>timestamp</type>
				<notnull>true</notnull>
				<default>1970-01-01 00:00:00</default>
			</field>
			<field>
				<name>sms_id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>5</length>
			</field>
			<field>
				<name>sms_address</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>sms_msg</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>2048</length>
			</field>
			<field>
				<name>sms_date</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>10</length>
			</field>
			<field>
				<name>sms_flags</name>
				<type>text</type>
				<notnull>true</notnull>
				<default>00</default>
				<length>2</length>
			</field>
			<field>
				<name>sms_mailbox</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>1</length>
			</field>
			<field>
				<name>sms_type</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>1</length>
			</field>

			<index>
				<name>oc_ocsms_smsdatas_user_addr_date_mbox_idx</name>
				<unique>false</unique>
				<field>
					<name>user_id</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>sms_address</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>sms_date</name>
					<sorting>descending</sorting>
				</field>
				<field>
					<name>sms_mailbox</name>
					<sorting>ascending</sorting>
				</field>
			</index>
			<index>
				<name>oc_ocsms_smsdatas_user_mbox_idx</name>
				<unique>false</unique>
				<field>
					<name>user_id</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>sms_mailbox</name>
					<sorting>ascending</sorting>
				</field>
			</index>
		</declaration>
	</table>

	<table>
		<name>*dbprefix*ocsms_config</name>
		<declaration>
			<field>
				<name>user</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			<field>
				<name>key</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			<field>
				<name>value</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>25555</length>
			</field>

			<index>
				<name>oc_ocsms_config_user_key_idx</name>
				<unique>true</unique>
				<field>
					<name>user</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>key</name>
					<sorting>ascending</sorting>
				</field>
			</index>
	   </declaration>
	</table>
</database>
